pipeline { 
  
   agent any

   stages {
   
     stage('Terraform Init') { 
        steps { 
           withAWS(credentials: 'aws-cred') {
           sh "echo ${GIT_BRANCH} && cd terraform/main && terraform init"
        }
      }
     }
     
     stage('Terraform Plan') { 
        steps { 
           withAWS(credentials: 'aws-cred') {
           sh 'cd terraform/main && terraform plan'
        }
      }
     }
     
stage('Waiting for Approvals') {
            
      steps{
          input('Plan Validated? Please approve to create resources in AWS?')
			  }
      }    
     
     
     stage('Terraform Apply') { 
        steps { 
           withAWS(credentials: 'aws-cred') {
           sh 'cd terraform/main && terraform apply -auto-approve'
        }
      }
     }

     stage('Run Glue Workflow Pipeline') { 
        steps { 
           withAWS(credentials: 'aws-cred') {
           sh 'aws glue start-workflow-run --name cfm-etl-workflow --region us-east-2'
        }
      }
     }

   	}

   }
